---
import Card from "../../components/Card.astro";
import Layout from "../../layouts/Layout.astro";

// const allPosts = await Astro.glob("../../../content/");
const allPosts = await Astro.glob("../../../content/*.md");
---

<Layout>
  <div class="grid gap-8 p-4 grid-cols-[repeat(auto-fit,_minmax(300px,_1fr))]">
    {allPosts.map((item) => <Card data={item} />)}
  </div>
</Layout>
